<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.org/dtd//hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.donkey.model.User" table="User">
        <id name="id" type="string">
            <column name="id"/>
        </id>
        <property name="password" type="string">
            <column name="password"/>
        </property>
        <property name="name" type="string">
            <column name="name"/>
        </property>
        <property name="title" type="string">
            <column name="title"/>
        </property>
        <property name="isValid" type="string">
            <column name="isValid"/>
        </property>
        <property name="create_date" type="date">
            <column name="create_date"/>
        </property>
        <property name="level" type="integer">
            <column name="level"/>
        </property>
    </class> 


</hibernate-mapping>
